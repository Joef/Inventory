.row-fluid
  .span8
    %h1= @vendor.name
    
    %h5 
      Invoices
       
    %table.table.table-hover.table-striped
      %thead
        - if @vendor.invoices.length > 0 
          %tr
          %th
          %th Number 
          %th Date
          %th Price
          %th
          %th
        %tbody
          = render(@vendor.invoices)
        %tfoot
          %tr
            %td(colspan="6" style="text-align:center;")= link_to('Add Invoice', new_vendor_invoice_url(@vendor), class: "btn btn-default")
      %br
    
     
    
  .span4
    %span.small= @this_year
    %h1= number_to_currency @vendor.total_spend(@this_year)
    %span.small= @this_year - 1
    %h1= number_to_currency @vendor.total_spend(@this_year - 1)
    %h5 Address
    = @vendor.address_1 
    
    -if @vendor.address_2
      %br
      = @vendor.address_2
    %br
    = @vendor.address_city  
    ,
    = @vendor.address_state 
    = @vendor.address_postal_code 
    .links
      = link_to 'Edit', edit_vendor_path(@vendor), class: "btn btn-default"
.row-fluid
  .span8
    
    
        
    .field.row-fluid
      .span12
        
  .span4
      

      
      




