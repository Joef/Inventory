= form_for @vendor_type do |f|
  - if @vendor_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor_type.errors.count, "error")} prohibited this vendor_type from being saved:"
      %ul
        - @vendor_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
