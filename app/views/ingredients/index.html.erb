<h1>Ingredients</h1>

<%= link_to 'Add New', new_ingredient_path, class: 'btn btn-default' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.name, ingredient %></td>
        <td><%= link_to ingredient.category.name, ingredient.category if !ingredient.category.nil? %></td>
        <td><%= number_to_currency ingredient.last_price %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) if ingredient.custom? %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } if ingredient.custom? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New', new_ingredient_path, class: 'btn btn-default' %>
